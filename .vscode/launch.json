{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp task",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "args": [
                "run serve"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe --remote-debugging-port=9222",
            "name": "Attach to Chrome",
            "url": "http://localhost:3000",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}